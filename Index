<script>
/* Interaction (mÃªme logique que les autres pages) */
const phrases = [
  {nl:"De man leest een krant.", fr:"L'homme lit un journal."},
  {nl:"Het huis is groot.", fr:"La maison est grande."},
  {nl:"De tafel is nieuw.", fr:"La table est neuve."},
  {nl:"Het kind speelt buiten.", fr:"L'enfant joue dehors."},
  {nl:"De auto is snel.", fr:"La voiture est rapide."},
  {nl:"Het boek is interessant.", fr:"Le livre est intÃ©ressant."},
  {nl:"De vrouw kookt.", fr:"La femme cuisine."},
  {nl:"Het weer is mooi vandaag.", fr:"Il fait beau aujourd'hui."},
  {nl:"De hond slaapt.", fr:"Le chien dort."},
  {nl:"Het water is koud.", fr:"L'eau est froide."}
];

let current = 0;
let seqInterval = null;
function showPhrase(){
  document.getElementById('phrase').textContent = phrases[current].nl;
  document.getElementById('translation').style.display = 'none';
  document.getElementById('counter').textContent = '';
}
function toggleTranslation(){
  const t = document.getElementById('translation');
  if(t.style.display === 'none'){ t.textContent = phrases[current].fr; t.style.display='block'; }
  else t.style.display='none';
}
function prevPhrase(){ current = (current-1+phrases.length)%phrases.length; showPhrase(); }
function nextPhrase(){ current = (current+1)%phrases.length; showPhrase(); }
function playAudio(){ try{ speechSynthesis.cancel(); }catch(e){}; const u = new SpeechSynthesisUtterance(phrases[current].nl); u.lang='nl-NL'; speechSynthesis.speak(u); }
function startSequence(){
  pauseSequence();
  let i = 0;
  seqInterval = setInterval(()=>{
    current = i % phrases.length;
    showPhrase();
    setTimeout(()=>playAudio(), 200);
    document.getElementById('counter').textContent = `Phrase ${i+1} / ${phrases.length}`;
    i++;
    if(i>=phrases.length){ clearInterval(seqInterval); seqInterval=null; document.getElementById('counter').textContent='âœ… TerminÃ©'; }
  }, 4200);
}
function pauseSequence(){ if(seqInterval){ clearInterval(seqInterval); seqInterval=null; } try{ speechSynthesis.cancel(); }catch(e){}; document.getElementById('counter').textContent='â¸ En pause'; }
function toggleFocus(){ document.body.classList.toggle('focus-active'); }

showPhrase();
</script>
